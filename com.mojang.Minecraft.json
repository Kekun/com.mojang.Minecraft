{
  /* GTK+ is needed by JavaFX. */
  "app-id": "com.mojang.Minecraft",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "minecraft",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk9"
  ],
  "finish-args": [
    "--persist=.minecraft",
    /* X11 access */
    "--socket=x11",
    /* OpenGL access */
    "--device=dri",
    /* PulseAudio access */
    "--socket=pulseaudio",
    /* Network access */
    "--share=network"
  ],
  "build-options" : {
      "append-path": "/usr/lib/sdk/openjdk9/bin"
  },
  "modules": [
    {
      /* Needed by Minecraft 1.8.2 and up. */
      "name": "xrandr",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.x.org/archive/individual/app/xrandr-1.5.0.tar.gz",
          "sha256": "ddfe8e7866149c24ccce8e6aaa0623218ae19130c2859cadcaa4228d8bb4a46d"
        }
      ]
    },
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": [
          "/usr/lib/sdk/openjdk9/install.sh",
          "rm /app/jre/lib/security/cacerts",
          "for file in /etc/ssl/certs/*; do keytool -importcert -keypass changeit -file $file -keystore /app/jre/lib/security/cacerts -noprompt -storepass changeit -alias $(basename $file); done"
      ]
    },
    {
      "name": "minecraft",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/extra",
        "install -Dp -m 755 minecraft /app/bin/minecraft",
        "install -Dp -m 644 com.mojang.Minecraft.desktop /app/share/applications/com.mojang.Minecraft.desktop",
        "install -Dp -m 644 com.mojang.Minecraft-64.png /app/share/icons/hicolor/64x64/apps/com.mojang.Minecraft.png",
        "install -Dp -m 644 com.mojang.Minecraft-128.png /app/share/icons/hicolor/128x128/apps/com.mojang.Minecraft.png",
        "install -Dp -m 644 com.mojang.Minecraft.png /app/share/icons/hicolor/256x256/apps/com.mojang.Minecraft.png",
        "install -Dp -m 644 com.mojang.Minecraft.appdata.xml /app/share/appdata/com.mojang.Minecraft.appdata.xml"
      ],
      "sources" : [
        {
          "type": "extra-data",
          "filename": "Minecraft.jar",
          "url": "http://s3.amazonaws.com/Minecraft.Download/launcher/Minecraft.jar",
          "sha256": "e8d90b2637b141b556670d8460d317aadb6e4f2e644e519995c428800b25f212",
          "size": 280212
        },
        {
          "type": "script",
          "commands": [
            "/app/jre/bin/java -Djavax.net.ssl.trustStorePassword=changeit -jar /app/extra/Minecraft.jar"
          ],
          "dest-filename": "minecraft"
        },
        {
          "type": "file",
          "path": "com.mojang.Minecraft.desktop"
        },
        {
          "type": "file",
          "path": "com.mojang.Minecraft-64.png"
        },
        {
          "type": "file",
          "path": "com.mojang.Minecraft-128.png"
        },
        {
          "type": "file",
          "path": "com.mojang.Minecraft.png"
        },
        {
          "type": "file",
          "path": "com.mojang.Minecraft.appdata.xml"
        }
      ]
    }
  ]
}
