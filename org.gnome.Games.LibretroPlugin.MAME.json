{
    "id": "org.gnome.Games.LibretroPlugin.MAME",
    "runtime": "org.gnome.Games",
    "runtime-version": "stable",
    "sdk": "org.gnome.Sdk//3.34",
    "build-extension": true,
    "appstream-compose": false,
    "finish-args": [
        /* Needed to find the ROMs */
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "libretro-mame",
            "no-autogen": true,
            "make-args": [
                "--makefile=Makefile.install",
                "prefix=/app",
                "PYTHON_EXECUTABLE=python3"
            ],
            "make-install-args": [
                "--makefile=Makefile.install",
                "prefix=/app",
                "PYTHON_EXECUTABLE=python3"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libretro/mame"
                },
                {
                    "type": "file",
                    "path": "mame-Makefile.install",
                    "dest-filename": "Makefile.install"
                },
                {
                    "type": "file",
                    "path": "mame.libretro"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 -t ${FLATPAK_DEST}/share/metainfo org.gnome.Games.LibretroPlugin.MAME.metainfo.xml",
                "appstream-compose --basename=org.gnome.Games.LibretroPlugin.MAME --prefix=${FLATPAK_DEST} --origin=flatpak org.gnome.Games.LibretroPlugin.MAME"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.gnome.Games.LibretroPlugin.MAME.metainfo.xml"
                }
            ]
        }
    ]
}
