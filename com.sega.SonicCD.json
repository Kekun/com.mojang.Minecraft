{
    "app-id" : "com.sega.SonicCD",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "20.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "soniccd-check",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=~/.var/app/com.valvesoftware.Steam/.local/share/Steam/steamapps/common/Sonic CD:ro"
    ],
    "modules" : [
        {
            "name" : "soniccd",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "post-install": [
                "install -Dp -m 755 soniccd-check /app/bin/soniccd-check",
                "install -Dp -m 644 com.sega.SonicCD.desktop /app/share/applications/com.sega.SonicCD.desktop",
                "install -Dp -m 644 com.sega.SonicCD.png /app/share/icons/hicolor/256x256/apps/com.sega.SonicCD.png",
                "install -Dp -m 644 com.sega.SonicCD.appdata.xml /app/share/appdata/com.sega.SonicCD.appdata.xml"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Rubberduckycooly/Sonic-CD-11-Decompilation.git",
                    "commit" : "41f2675f62c0d6b0337dea073741d4b238d65cbc"
                },
                {
                    "type" : "patch",
                    "path" : "0001-Makefile-Add-the-install-rule.patch"
                },
                {
                    "type" : "patch",
                    "path" : "0002-Makefile-Add-pthread.patch"
                },
                {
                    "type" : "patch",
                    "path" : "0003-Look-for-data-files-in-the-Steam-install.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "soniccd-check",
                    "commands": [
                        "if test -f ~/.var/app/com.valvesoftware.Steam/.local/share/Steam/steamapps/common/Sonic\\ CD/Data.rsdk; then",
                        "    soniccd",
                        "else",
                        "    zenity --error --title=\"Sonic CD\" --text=\"Sonic CD needs to be installed from Steam in order to run.\"",
                        "fi"
                    ]
                },
                {
                    "type": "file",
                    "path": "com.sega.SonicCD.desktop"
                },
                {
                    "type": "file",
                    "path": "com.sega.SonicCD.png"
                },
                {
                    "type": "file",
                    "path": "com.sega.SonicCD.appdata.xml"
                }
            ]
        }
    ]
}
