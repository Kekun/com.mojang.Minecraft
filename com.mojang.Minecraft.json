{
  /* GTK+ is needed by JavaFX. */
  "app-id": "com.mojang.Minecraft",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk.Extension.openjdk9",
  "command": "minecraft",
  "finish-args": [
      "--persist=.minecraft",
      /* X11 access */
      "--socket=x11",
      /* OpenGL access */
      "--device=dri",
      /* PulseAudio access */
      "--socket=pulseaudio",
      /* Network access */
      "--share=network",
      "--extra-data=Minecraft.jar:495ee255cca5c2280e3f57ef93a7db8eb17a4dee233374a6b74d564eb1ec65af:48112736:48112736:http://s3.amazonaws.com/Minecraft.Download/launcher/Minecraft.jar"
  ],
  "modules": [
      {
          /* Needed by Minecraft 1.8.2 and up. */
          "name": "xrandr",
          "sources": [
              {
                  "type": "git",
                  "url": "git://anongit.freedesktop.org/xorg/app/xrandr"
              }
          ]
      },
      {
          "name": "minecraft",
          "no-autogen": true,
          "buildsystem": "simple",
          "build-commands": [],
          "post-install": [
              "mkdir -p /app/extra",
              "install -Dp -m 755 minecraft /app/bin/minecraft",
              "install -Dp -m 644 com.mojang.Minecraft.desktop /app/share/applications/com.mojang.Minecraft.desktop",
              "install -Dp -m 644 com.mojang.Minecraft.png /app/share/icons/hicolor/256x256/apps/com.mojang.Minecraft.png",
              "install -Dp -m 644 com.mojang.Minecraft.appdata.xml /app/share/appdata/com.mojang.Minecraft.appdata.xml"
          ],
          "sources" : [
              {
                  "type": "script",
                  "commands": [
                      "java -jar /app/extra/Minecraft.jar"
                  ],
                  "dest-filename": "minecraft"
              },
              {
                  "type": "file",
                  "path": "com.mojang.Minecraft.desktop"
              },
              {
                  "type": "file",
                  "path": "com.mojang.Minecraft.png"
              },
              {
                  "type": "file",
                  "path": "com.mojang.Minecraft.appdata.xml"
              }
          ]
      }
  ]
}
